        <TextBox x:Name="txtKol_Elem" HorizontalAlignment="Left" Height="23" Margin="628,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="38" RenderTransformOrigin="5.158,0.739"/>
