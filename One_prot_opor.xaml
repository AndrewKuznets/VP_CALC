        <Button x:Name="btnOk" Content="Ok" Margin="506,0,0,21.4" IsDefault="True" ToolTip="Сохранить данные и выйти" Click="btnOk_Click" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="66"/>
